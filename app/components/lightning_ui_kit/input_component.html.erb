<%= tag.div(
  class: classes,
  data:
) do %>
    <% if @label %>
      <%= tag.label(
        @label,
        class: "text-base/6 text-zinc-950 select-none data-disabled:opacity-50 sm:text-sm/6",
        data: label_data
      ) %>
  <% end %>
  <% if @description %>
    <%= tag.p(
      @description,
      class: "text-base/6 text-zinc-500 data-disabled:opacity-50 sm:text-sm/6",
      data: description_data
    ) %>
  <% end %>
